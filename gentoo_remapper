#!/sbin/openrc-run
# Copyright 1999-2025 Gentoo Authors
# Distributed under the terms of the GNU General Public License v2

command=/usr/bin/gentoo_remapper.py
command_background="true"
pidfile="/run/gentoo_remapper.pid"

start() {
	ebegin "Initializing 'CyLei Dactyl_74_L'"
	${command} 'CyLei Dactyl_74_L' &
	eend $?

	ebegin "Initializing 'CyLei Dactyl_74_R'"
	${command} 'CyLei Dactyl_74_R' &
	eend $?
}

stop() {
	pkill gentoo_remapper
}
